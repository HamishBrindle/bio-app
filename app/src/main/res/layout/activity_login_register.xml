<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.biomap.application.bio_app.Login.LoginRegisterActivity">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="28dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1">

        <ImageView
            android:id="@+id/logo_login_register_imageview"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="62dp"
            android:background="@drawable/ic_logo_white"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp"/>

        <ImageView
            android:id="@+id/logo_text_login_register_imageview"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_below="@+id/logo_login_register_imageview"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="31dp"
            android:background="@drawable/ic_wordmark_tagline"/>

        <TextView
            android:id="@+id/login_register_description_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logo_text_login_register_imageview"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="75dp"
            android:layout_marginTop="75dp"
            android:gravity="center_horizontal"
            android:text="@string/login_register_description"
            android:textAllCaps="true"
            android:textSize="20sp"
            />

        <Button
            android:id="@+id/register_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login_register_description_text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_register"
            android:hapticFeedbackEnabled="true"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:text="@string/register_LoginRegister"/>

        <Button
            android:id="@+id/sign_in_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/register_button"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_signin"
            android:paddingLeft="60dp"
            android:paddingRight="60dp"
            android:text="Sign In"/>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
