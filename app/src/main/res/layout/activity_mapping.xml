<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.biomap.application.bio_app.Mapping.MappingActivity">

    <!-- Start of Main Container -->
    <RelativeLayout
        android:id="@+id/mainContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        tools:ignore="MissingPrefix">

        <!-- Top Navigation Toolbar -->
        <RelativeLayout
            android:id="@+id/relLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include layout="@layout/layout_top_tabs" />
        </RelativeLayout>

        <!-- Start of Page Header & Title -->
        <RelativeLayout
            android:id="@+id/page_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center">

            <!-- "Mapping" Page title -->
            <TextView
                android:id="@+id/mapping_page_title"
                fontPath="fonts/Gotham-Bold.otf"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:includeFontPadding="true"
                android:text="@string/mapping_activity_title"
                android:textColor="@color/colorAccent"
                android:textSize="24sp" />

            <!-- Mapping icon next to page title -->
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_toLeftOf="@+id/mapping_page_title"
                android:layout_toStartOf="@+id/mapping_page_title"
                android:padding="10dp"
                custom:srcCompat="@drawable/ic_mapping_svg" />
        </RelativeLayout>
        <!-- End of Page Header & Title -->

        <!-- Start of indicators, pressure grid, and weight distribution charts -->
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            tools:context="com.example.androidtouchview.MainActivity"
            android:weightSum="1">

            <!-- Start of Right and Left indicatiors at top -->
            <LinearLayout
                android:id="@+id/mapping_indicators"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <!-- Right indicator -->
                <TextView
                    android:id="@+id/map_right_indicator"
                    fontPath="fonts/Gothic-Bold.otf"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="100dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/mapping_indicator_tab"
                    android:gravity="center"
                    android:text="Right"
                    android:textColor="@color/LavenderPurple"
                    android:textSize="17sp" />

                <!-- Left Indicator -->
                <TextView
                    android:id="@+id/map_left_indicator"
                    fontPath="fonts/Gothic-Bold.otf"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/mapping_indicator_tab"
                    android:gravity="center"
                    android:text="Left"
                    android:textColor="@color/SeafoamGreen"
                    android:textSize="17sp" />

            </LinearLayout>
            <!-- End of Right and Left indicatiors at top -->

            <!-- Pressure map grid -->
            <GridLayout
                android:id="@+id/mappingGrid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@color/darkColor"
                android:orientation="horizontal" />

            <!-- "Weight Distribution" TextView -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="Weight Distribution"
                android:textSize="17sp" />

            <!-- Start of Weight Distribution charts -->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp">

                <!-- Circle chart RIGHT -->
                <com.github.lzyzsd.circleprogress.ArcProgress
                    android:id="@+id/arc_progress"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@color/darkColor"
                    custom:arc_bottom_text="Right"
                    custom:arc_bottom_text_size="15sp"
                    custom:arc_finished_color="@color/LavenderPurple"
                    custom:arc_progress="32"
                    custom:arc_text_color="@color/LavenderPurple"
                    custom:arc_unfinished_color="@color/colorPrimary" />

                <!-- Circle chart LEFT -->
                <com.github.lzyzsd.circleprogress.ArcProgress
                    android:id="@+id/arc_progress2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_toEndOf="@id/arc_progress"
                    android:layout_toRightOf="@id/arc_progress"
                    android:background="@color/darkColor"
                    custom:arc_bottom_text="Left"
                    custom:arc_bottom_text_size="15sp"
                    custom:arc_finished_color="@color/SeafoamGreen"
                    custom:arc_progress="44"
                    custom:arc_text_color="@color/SeafoamGreen"
                    custom:arc_unfinished_color="@color/colorPrimary" />

            </RelativeLayout>
            <!-- End of Distribution charts -->

        </LinearLayout>
        <!-- End of indicators, pressure grid, and weight distribution charts -->

        <!-- Bottom Navigation Toolbar -->
        <include layout="@layout/layout_bottom_navigation_view" />

    </RelativeLayout>
    <!-- End of Main Container -->

</android.support.design.widget.CoordinatorLayout>
