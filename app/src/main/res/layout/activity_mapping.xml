<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.biomap.application.bio_app.Mapping.MappingActivity">

    <RelativeLayout
        android:id="@+id/mainContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingPrefix">

        <!-- top toolbar -->
        <RelativeLayout
            android:id="@+id/relLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include layout="@layout/layout_top_tabs" />

        </RelativeLayout>

        <!-- Page Header -->
        <TextView
            android:id="@+id/pageTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/mapping_activity_title"
            android:textSize="24sp"
            android:textColor="@color/colorAccent"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:includeFontPadding="true"
            fontPath="fonts/Gotham-Bold.otf" />

        <!-- Body -->
        <RelativeLayout
            android:id="@+id/body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include layout="@layout/layout_center_viewpager" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/relLayout1"
            android:layout_centerHorizontal="true"
            android:id="@+id/mapping_indicators"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Right"
                android:textSize="14sp"
                android:layout_marginEnd="200dp"
                fontPath="fonts/Gothic-Bold.otf"
                android:id="@+id/map_right_indicator"
                android:layout_marginRight="50dp"
                android:textColor="@color/MintGreen"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Left"
                android:textSize="14sp"
                fontPath="fonts/Gothic-Bold.otf"
                android:layout_toRightOf="@id/map_right_indicator"
                android:id="@+id/map_left_indicator"
                android:textColor="@color/SeafoamGreen"/>


        </RelativeLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/mapping_viewGroup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/mapping_indicators"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:weightSum="1"
            tools:context="com.example.androidtouchview.MainActivity">

            <GridLayout
                android:id="@+id/mappingGrid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/darkColor"
                android:orientation="horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weight Distribution"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:textSize="20sp"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp">

                <com.github.lzyzsd.circleprogress.ArcProgress
                    android:id="@+id/arc_progress"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@color/darkColor"
                    custom:arc_bottom_text="Right"
                    custom:arc_bottom_text_size="15sp"
                    custom:arc_finished_color="@color/MintGreen"
                    custom:arc_progress="32"
                    custom:arc_suffix_text=""
                    custom:arc_text_color="@color/MintGreen"
                    custom:arc_unfinished_color="@color/colorPrimary" />

                <com.github.lzyzsd.circleprogress.ArcProgress
                    android:id="@+id/arc_progress2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_toEndOf="@id/arc_progress"
                    android:layout_toRightOf="@id/arc_progress"
                    android:background="@color/darkColor"
                    custom:arc_bottom_text="Left"
                    custom:arc_bottom_text_size="15sp"
                    custom:arc_finished_color="@color/SeafoamGreen"
                    custom:arc_progress="44"
                    custom:arc_suffix_text=""
                    custom:arc_text_color="@color/SeafoamGreen"
                    custom:arc_unfinished_color="@color/colorPrimary" />

            </RelativeLayout>


        </LinearLayout>


        <!-- Bottom Toolbar -->
        <include layout="@layout/layout_bottom_navigation_view" />

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
